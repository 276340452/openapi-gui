.container-fluid
	.sidebar
		.well
			%h3 Endpoints
			%ul
				- @result.endpoints.each do |e|
					%li 
						#{e.name}
						%ul
							- e["methods"].each do |m|
								%li #{m.MethodName}
					
	.content
		%form
			-count=0
			- @result.endpoints.each do |e|
				-count=count+1
				.endpoint{:id => "ep#{count}"} 
					%h2
						Endpoint: #{e.name}
					%fieldset
					
						.clearfix
							%label{:for => "name#{count}"} Endpoint Name
							.input
								%input{:name => "name#{count}", :id => "name#{count}", :value => "#{e.name}"}
						
						- haml :methods, :locals => {:e => e}
					
