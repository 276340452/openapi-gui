%ul.tabs
	%li.active
		%a{:tab => "editor", :href => "#editor"} Editor
	%li
		%a.viewOutput{:tab => "output-container", :href => "#output-container"} Output	

.hidden#output-container
	%form{:method => "post", :action => "/file"}
		%input#json{:type => "hidden", :name => "json", :value => " "}
		%input.btn{:type => "submit", :value => "Save File"}
	#output
	
.container-fluid#editor
	= partial :menu, :locals => {:result => @result}
				
	.content.forms
		#start
			%h3 Click on a Endpoint or Method from the list on the left, or add a new Endpoint to get started.
			
		%form#config
			-count=0
			- @result["endpoints"].each do |e|
				-count=count+1
				.endpoint.hidden{:id => "ep#{count}"} 
					%h2	Endpoint: #{e.name}
					%label{:for => "endpoints[#{count}].name"} Endpoint Name
					.input
						%input{:name => "endpoints[#{count}].name", :id => "endpoints[#{count}].name", :value => "#{e.name}"}
					%br/
					
					%fieldset			
						= partial :methods, :locals => {:endpoint => e, :endpointIndex => count}
					
