-method_count = 0
- endpoint["methods"].each do |m|
-method_count=method_count+1
	%legend
		Method: #{m.MethodName}
	%br/
	.clearfix
		%label{:for => "endpoints[#{endpointIndex}].methods[#{method_count}].MethodName"} Method Name
		.input
			%input{:name => "endpoints[#{endpointIndex}].methods[#{method_count}].MethodName", :id => "endpoints.endpoint[#{endpointIndex}].methods[#{method_count}].MethodName", :value => "#{m.MethodName}"}
	.clearfix
		%label{:for => "endpoints[#{endpointIndex}].methods[#{method_count}].Synopsis"} Synopsis
		.input
			%input{:name => "endpoints[#{endpointIndex}].methods[#{method_count}].Synopsis", :id => "endpoints[#{endpointIndex}].methods[#{method_count}].Synopsis", :value => "#{m.Synopsis}"}
	.clearfix
		%label{:for => "endpoints[#{endpointIndex}].methods[#{method_count}].HTTPMethod"} HTTP Method (GET, POST, PUT, etc)
		.input 
			%input{:name => "endpoints[#{endpointIndex}].methods[#{method_count}].HTTPMethod", :id => "endpoints[#{endpointIndex}].methods[#{method_count}].HTTPMethod", :value => "#{m.HTTPMethod}"}
	.clearfix
		%label{:for => "endpoints[#{endpointIndex}].methods[#{method_count}].URI"} URI
		.input 
			%input{:name => "endpoints[#{endpointIndex}].methods[#{method_count}].URI", :id => "endpoints[#{endpointIndex}].methods[#{method_count}].URI", :value => "#{m.URI}"}							
	.clearfix
		%label{:for => "endpoints[#{endpointIndex}].methods[#{method_count}].RequiresOAuth"} Requires OAuth? (Y or N)
		.input 
			%input{:name => "endpoints[#{endpointIndex}].methods[#{method_count}].RequiresOAuth", :id => "endpoints[#{endpointIndex}].methods[#{method_count}].RequiresOAuth", :value => "#{m.RequiresOAuth}"}
			
	= partial :parameters, :locals => {:m => m, :methodIndex => method_count, :endpointIndex => endpointIndex}