.hero-unit
	%h2 
		Easily edit or create 
		%a{:href => "https://github.com/mashery/iodocs"} I/O Docs
		JSON files
	%br/
	
	%form(method="post" enctype='multipart/form-data')
		.row
			.span6
				%p 
					Upload your existing JSON file...
				%input(type='file' name='file')
				%br/
				%input.btn.primary.large(type='submit' value='Load JSON' name="load")

			.span7
				%p 
					\...or create a new configuration to get started.
				%input.btn.primary.large(type='submit' value='New' name="new")
